@model IEnumerable<myauth.Models.ClientActivite>

@using GridMvc.Html
@{
    ViewBag.Title = "ClientHistory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<br />
<h2 class="text-center text-secondary">Clients History</h2>
<br />

@using (Html.BeginForm())
{
    <div class="row">
        <div class="mx-auto h-50 ">

            @*<i class="material-icons">search</i>*@

            <div class="form-group">
                <span class="icon" style="position: absolute; left: 2px; top: 0; padding:0px 0px 10px 0px; font-size: 25px; color:purple ;height: 100%; display: flex; align-items: center; justify-content: center;"><i class="material-icons">search</i></span>
                <input type="text" name="Search" class="form-control" style="padding: 3px 0px 3px 30px; " placeholder="Search...">
            </div>

        </div>
    </div>
    <div class="row">
        <div class="mx-auto h-50">
            <input type="submit" value="Action" name="button" class="btn btn-default btn-primary btn-sm " style="width:120px;" />
            <input type="submit" value="Id Client" name="button" class="btn btn-default btn-primary btn-sm " style="width:120px;" />
            <input type="submit" value="Id Commande" name="button" class="btn btn-default cancel btn-primary btn-sm " style="width:120px;" />
            <input type="submit" value="Remove filter" name="button" class="btn btn-default cancel btn-primary btn-sm " style="width:120px;" />

        </div>
    </div>

}

