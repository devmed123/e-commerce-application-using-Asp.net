@Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(c => c.Name).Titled("Action").Filterable(true);
    Columns.Add(c => c.Date).Titled("Date").Filterable(true);
    Columns.Add(c => c.IdCommande).Titled("Id Commande").Filterable(true);
    Columns.Add(c => c.Client.IdClient).Titled("Id Client").Filterable(true);
    Columns.Add(c => c.Client.User.UserName).Titled("Client Name").Filterable(true);
    Columns.Add().Encoded(false).Sanitized(false).RenderValueAs(c => Html.ActionLink("Commande Details", "CommandeDetails", new { id = c.IdCommande }, new { @class = "btn btn-default btn-primary btn-sm" }));

}).WithPaging(10).Sortable(true)
