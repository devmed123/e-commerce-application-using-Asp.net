@model IEnumerable<myauth.Models.Produit>

@using GridMvc.Html
@{
    ViewBag.Title = "ViewProducts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2 class="text-center text-secondary">View Products</h2>
<br />

<p class="text-white text-center">Filters</p>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="mx-auto h-50">

            <div class="form-group">
                <span class="icon" style="position: absolute; left: 2px; top: 0; padding:0px 0px 10px 0px; font-size: 25px; color:purple ;height: 100%; display: flex; align-items: center; justify-content: center;"><i class="material-icons">search</i></span>
                <input type="text" name="Search" class="form-control" style="padding: 3px 0px 3px 30px; " placeholder="Search...">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="mx-auto h-50">
            <input type="submit" value="Produit Id" name="button" class="btn btn-default btn-primary btn-sm " style="width:120px;" />
            <input type="submit" value="Titre" name="button" class="btn btn-default btn-primary btn-sm " style="width:120px;" />
            <input type="submit" value="Prix" name="button" class="btn btn-default cancel btn-primary btn-sm " style="width:120px;" />
            <input type="submit" value="Propritaire Id" name="button" class="btn btn-default cancel btn-primary btn-sm " style="width:120px;" />
            <input type="submit" value="Propritaire Nom" name="button" class="btn btn-default cancel btn-primary btn-sm " style="width:120px;" />
            <input type="submit" value="Remove filter" name="button" class="btn btn-default cancel btn-primary btn-sm " style="width:120px;" />


        </div>
    </div>

}

@{ int i = 0; }
@Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(c => c.IdProduit).Titled("Produit Id").Filterable(true);
    Columns.Add(c => c.Titre).Titled("Titre").Filterable(true);
    Columns.Add(c => c.Prix).Titled("Prix").Filterable(true);
    Columns.Add(c => c.DateAddition).Titled("Date d'Addition").Filterable(true);
    Columns.Add(c => c.DateLastModification).Titled("Date Dernire Modification").Filterable(true);
    Columns.Add(c => c.Proprietaire.IdPropritaire).Titled("Propritaire Id").Filterable(true);
    Columns.Add(c => c.Proprietaire.User.UserName).Titled("Propritaire Nom").Filterable(true);
    Columns.Add().Encoded(false).Sanitized(false).RenderValueAs(c => Html.ActionLink("Product Details", "ProductDetails", new { id = c.IdProduit }, new { @class = "btn btn-default btn-primary btn-sm" }));

}).WithPaging(10).Sortable(true)

