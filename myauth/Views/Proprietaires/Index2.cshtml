@model IPagedList<myauth.Models.Produit>
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_propr.cshtml";
}
@using PagedList;
@using PagedList.Mvc;
<div class="featured-page">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-12">
                <div class="section-heading">
                    <div class="line-dec"></div>
                    <h1> products List</h1>
                </div>
            </div>
           
        </div>
    </div>
</div>
<div class="featured container no-gutter">
    <div class="btn btn-info" style="margin-bottom:30px;">
        @Html.ActionLink("create", "create", null, new {  style = "color: white" })
    </div>
    <div class="row posts">

        @foreach (var item in Model)
        {

            <div class="item new col-md-4">

                <div class="featured-item" style="background-color:antiquewhite">
                    <img style="height:200px" src="@Url.Action("RenderImage",new { id = item.IdProduit  , t=0})" alt="">
                    <h4>@item.Titre</h4>
                    <h6>$@item.Prix</h6>
                    <button class=" btn btn-rounded btn-success">    @Html.ActionLink("details", "details_product", new { id = item.IdProduit })</button>
                    <button class=" btn btn-rounded btn-warning">  @Html.ActionLink("editer", "edition", new { id = item.IdProduit })</button>
                    <a id="deleteItem" class="deleteItem btn btn-danger" data-target="#basic"
                       data-toggle="modal"
                       data-path="@item.IdProduit">Delete</a>

                </div>



            </div>

        }
    </div>
</div>


<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                @using (Html.BeginForm())
                { 
                    <input type="hidden" name="id"  id="id"/>
                    <button id="btnContinueDelete" type="submit" name="delete"  class="btn btn-danger">Delete</button>
                }
            </div>
        </div>
    </div>
</div>
<div class="page-navigation ">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @Html.PagedListPager(Model, i => Url.Action("index2", new { i }), new PagedListRenderOptions
           {
               DisplayLinkToIndividualPages = true,
               DisplayPageCountAndCurrentLocation = false,
               MaximumPageNumbersToDisplay = 10,
               LiElementClasses = new string[] { "page-item" },
           })
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    var path_to_delete;

    $(".deleteItem").click(function (e) {
        path_to_delete = $(this).data('path');

        $('#id').val(path_to_delete);
        console.log($('#id').val(path_to_delete));
    });

  $('#btnContinueDelete').click(function () {
        
    });

</script>